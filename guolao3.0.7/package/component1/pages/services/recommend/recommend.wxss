@import"/pages/user/shop/dt/dt.wxss";

.van-notice-bar {
  width: 100%;
  position: fixed;
  left: 0;
  height: 45px;
  z-index: 300
}

.list_btn_p {
  width: 90%;
  position: absolute;
  top: 120rpx;
  margin-left: 5%
}

.btn_p {
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 8rpx;
  -webkit-transition: 0.1s;
  -o-transition: 0.1s;
  transition: 0.1s;
  color: #999;
  border: 1rpx solid#555;
  float: left;
  font-size: 26rpx;
  margin-top: 40rpx;
  max-width: 200rpx
}

.btn_p:nth-child(2n) {
  margin-left: 20rpx
}

.btn_p:nth-child(2n+1) {
  margin-left: 20rpx
}

