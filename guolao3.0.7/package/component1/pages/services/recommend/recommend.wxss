.lftmg {
  margin-left: 60rpx;
  position: relative;
  width: 100%;
  margin-right: 10rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap
}

.explain-top {
  position: fixed;
  z-index: 1000;
  left: 50px;
  font-size: 24rpx;
  color: #f44
}

.shar-box-s {
  position: fixed;
  width: 90rpx;
  height: 90rpx;
  right: -110rpx;
  top: 75%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.transX-s {
  animation-name: translationX;
  animation-duration: 0.4s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in;
}



@keyframes translationX {
  form {
    right: -110rpx
  }

  to {
    right: 0;
  }
}

.shar-box-s-image {
  width: 84rpx;
  height: 84rpx;
}

.shar-box-s-close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 0;
  top: 0;
}