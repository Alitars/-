page {
  background-image: linear-gradient(#FC8350,#FEB16C);
  width: 100%;
  height: 100%;
  padding-bottom: 0;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.continer{
  position: relative;
}
.center{
  text-align: center;
  position: relative;
}
.topImg{
  height: 360rpx;
  margin-top: 80rpx;
  width: 670rpx;
}
.jifen{
  position: absolute;
  top: 158rpx;
  left: 50%;
  transform: translateX(-50%);
}
.jifen .num{
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: 3rpx;
  color: #ffffff;
}
.myjf{
  font-family: PingFangSC;
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: 1.38rpx;
  color: #ffffff;
}

/* 签到 */
.qdBox{
  position: absolute;
  background-color: #fff;
  border-radius: 16rpx;
  width: 710rpx;
  /* height: 860rpx; */
  top: 404rpx;
  left: 50%;
  transform: translateX(-50%);
  padding:24rpx;
  box-sizing: border-box;
}
.r-l{
  vertical-align: middle;
  float: left;
}
.rule image{
  width: 24rpx;
  height: 24rpx;
}
.r-r{
  vertical-align: middle;
  float: right;
}
.rule text{
  padding-left: 12rpx;
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  letter-spacing: 1.38rpx;
  color: #888888;
}
.date{
  margin-top: 12rpx;
  width: 100%;
  height: 440rpx;
  background-image: url(https://admin.iguolao.com/public/uploads/20200629133543240.svg);
  background-size: 100%;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.day{
  margin-top: 30rpx;
  position: relative;
}
.posa{
  position: absolute;
  top: 34rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  color: #fff;
}
.day image{
  width: 136rpx;
  height: 100rpx;
  flex:1;
}
.day .tip{
  text-align: center;
  font-family: SourceHanSansCN;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  letter-spacing: 1.18rpx;
  color: #383838;
}
.Add{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 40rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: 1.58rpx;
  color: #3e3e3e;
}
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
}
.now{
  margin-top: 20rpx;
  text-align: center;
  font-family: PingFangSC;
  font-size: 48rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: 2.36rpx;
  color: #fb560a;
  background-image:linear-gradient(#FFE5A5 0%, #FFE3AB 50%, #FFD588 100%);
  height: 120rpx;
  line-height: 120rpx;
  width: 568rpx;
  border-radius: 22rpx;
  /* #FFE2AB */
}
.show{
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.5);
  /* -moz-opacity: 0.7;  
  opacity: 0.70;  
  filter: alpha(opacity=70);  */
  text-align: center;
}
.success{
  width: 670rpx;
  height: 468rpx;
  margin-top: 200rpx;
}
.end{
  width: 568rpx;
  height: 134rpx;
  margin-top: 80rpx;
}
.addNum{
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 500;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #ffffff;
  position: absolute;
  top: 560rpx;
  left: 50%;
  transform: translateX(-50%);
}
